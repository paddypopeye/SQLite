<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:cardBackgroundColor="@color/grey"
                android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" app:cardElevation="40dp" app:cardMaxElevation="20dp"
                app:cardCornerRadius="5dp" android:background="@color/grey" android:id="@+id/item_card">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:padding="10dp" android:id="@+id/ll_item">
                        <TextView
                                android:text="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txt_id"
                                android:textSize="18sp" android:layout_marginBottom="10dp" android:textColor="#fff"
                                android:textAlignment="center"/>
                        <TextView
                                android:text="Android "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/title_txtView"
                                android:textSize="18sp" android:layout_marginBottom="10dp" android:textColor="#fff"
                                android:textAlignment="center"/>
                        <TextView
                                android:text="Learn Android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/desc_txtView"
                                android:textSize="18sp" android:layout_marginBottom="10dp" android:textColor="#fff"
                                android:textAlignment="center"/>
                        <Button
                                android:text="@string/delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/item_btn"
                                android:background="@drawable/buttons_style" android:textColor="@color/red"/>
                </LinearLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>