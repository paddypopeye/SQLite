<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add_subject" android:background="@color/black">

    <Button
            android:text="@string/add_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_subject_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="160dp"
            android:textSize="24sp"
            android:background="@drawable/buttons_style" android:textColor="#fff"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/title_edit" android:layout_margin="10pt" android:hint="@string/enter_your_title"
                android:textColorHint="#fff" android:textColor="#fff" android:autofillHints=""/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/desc_edit" android:layout_margin="10pt" android:textColorHint="#fff"
                android:hint="@string/enter_your_description" android:textColor="#fff" android:autofillHints=""/>
    </LinearLayout>
</RelativeLayout>